<%- include("partials/header.ejs") %>

<div class="intro">
    <div class="container">
        <div class="intro__inner">
            <h1 class="intro__title">Welcome to the Unicorn Blog</h1>
            <h2 class="intro__subtitle">Articles</h2>
        <ul>
            <% articles.forEach(article => { %>
                <li>
                    <h3 class="article__title"><%= article.title %></h3>
                    <p class="article__content"><%= article.content %></p>
                    <a class="article__edit-btn" href="/edit/<%= article.id %>">Edit</a>
                    <form class="article__delete" action="/delete/<%= article.id %>" method="POST" style="display:inline;">
                        <button class="article__delete-btn" type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %>