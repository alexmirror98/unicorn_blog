<%- include("partials/header.ejs") %>

<div class="intro">
    <div class="container">
        <div class="intro__inner">
            <h1 class="intro__title">Welcome to the Unicorn Blog</h1>
            <h2 class="intro__subtitle">Article</h2>
            <form class="edit__form" action="/new" method="POST">
                <label class="edit__title" for="title">Title:</label>
                <input class="edit__input" id="title" name="title" required>
                <label class="edit__title" for="content">Content:</label>
                <textarea class="edit__content" id="content" name="content" required></textarea>
                <button class="edit__btn" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>


